import random

number = random.randint(1, 10)
guess = None

while guess != num:
    guess = input("guess a number between 1 and 10: ")
    guess = int(guess)

    if guess == number:
        print("your guess is correct")
        break
    else:
        print("your guess is wrong." + "The correct number is " + str(number)) 
        break
      
